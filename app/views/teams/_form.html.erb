<%= form_for @team do |f| %>
  <div class='form-group'>
    <%= f.text_field :name, {:placeholder => 'Team Name', class: 'form-control'} %><br/>
    <%= f.text_area :description, {:placeholder => 'Description', class: 'form-control', :rows => 10} %><br/>
    <%= f.submit 'Save', {class: 'btn btn-success'} %>
    <% if @team.id %>
      <%= link_to 'cancel', team_path(@team.id) %>
    <% else %>
      <%= link_to 'cancel', teams_path %>
    <% end %>
  </div>
<% end %>
